<!-- Create Package Section -->
<div class="container">
  <div class="row">
    <div class="col s12">

      <div class="card-panel">
        
        <%= render 'create_activity_menu' %>

        <div class="card-content">
            <div id="details">
                <div class="row">
                  <h5 class="center">Activity Details Section</h5>
                    <form class="col s12">
                        <div class="row">
                          <div class="input-field col s12">
                            <input id="activity-name" type="text">
                            <label for="activity-name">Activity name</label>
                            <span class="helper-text">Name will be displayed in all pages</span>
                          </div><!-- input-field -->
                        </div><!-- row -->
                        <div class="row">
                          <div class="input-field col s12">
                            <textarea id="about-text" class="materialize-textarea"></textarea>
                            <label for="about-text">About</label>
                            <span class="helper-text">Enter an introduction about this activity</span>
                          </div><!-- input-field -->
                        </div><!-- row -->
                        <div class="row">
                          <div class="input-field col s12">
                            <input id="detail-title-1" type="text">
                            <label for="detail-title-1">Title For Details 1</label>
                            <span class="helper-text">Enter a name for this detail section</span>
                          </div><!-- input-field -->
                        </div><!-- row -->
                        <div class="row">
                          <div class="input-field col s12">
                            <textarea id="details-text-1" class="materialize-textarea"></textarea>
                            <label for="details-text-1">Information About Details 1</label>
                            <span class="helper-text">Enter important information about this activity</span>
                          </div><!-- input-field -->
                        </div><!-- row -->
                        <div class="row">
                          <h6>Detail 2 will add more information, leave blank if there is no more information.</h6>
                          <div class="input-field col s12">
                            <input id="detail-title-2" type="text">
                            <label for="detail-title-2">Title For Details 2</label>
                            <span class="helper-text">Enter a name for this detail section</span>
                          </div><!-- input-field -->
                        </div><!-- row -->
                        <div class="row">
                          <div class="input-field col s12">
                            <textarea id="detail-text-2" class="materialize-textarea"></textarea>
                            <label for="detail-text-2">Information About Details 2</label>
                            <span class="helper-text">Add more information about activity.</span>
                          </div><!-- input-field -->
                        </div><!-- row -->
                        <br/>
                        <br/>
                        <hr/>
                        <br/>
                        <br/>
                        <div class="row">
                          <h6>How to get there</h6>
                          <div class="input-field col s12">
                            <textarea id="direction-text" class="materialize-textarea"></textarea>
                            <label for="direction-text">Directions Text</label>
                            <span class="helper-text">Enter text information on how to get to location.</span>
                          </div><!-- input-field -->
                        </div><!-- row -->
                        <div class="row">
                          <h6>How to secure your seats</h6>
                          <div class="input-field col s12">
                            <textarea id="secure-seats-text" class="materialize-textarea"></textarea>
                            <label for="secure-seats-text">Secure Seats</label>
                            <span class="helper-text">Enter text information on how to secure seats.</span>
                          </div><!-- input-field -->
                        </div><!-- row -->
                        <div class="row">
                          <h6>Additional Information</h6>
                          <div class="input-field col s12">
                            <textarea id="add-information-text" class="materialize-textarea"></textarea>
                            <label for="add-information-text">Additional Information</label>
                            <span class="helper-text">Add more information about this reservation, leave blank if not required.</span>
                          </div><!-- input-field -->
                        </div><!-- row -->
                        <div class="row">
                          <h6>Cancellation &amp; Refund Policies</h6>
                          <div class="input-field col s12">
                            <textarea id="refund-policies-text" class="materialize-textarea"></textarea>
                            <label for="refund-policies-text">Cancellation &amp; Refund Policies</label>
                            <span class="helper-text">Add cancellation &amp; refund policies for this activity.</span>
                          </div><!-- input-field -->
                        </div><!-- row -->
                    </form>
                </div><!-- row -->
            </div><!-- details -->

            <div id="photos">
              <form action="#">
                <h5 class="center">Upload photos for slider and banner</h5>
                <br/>
                <br/>
                <br/>
                <p>First photo will be used as banner image, upload multiple to make a photo slider.</p>
                <div class="file-field input-field">
                  <div class="btn">
                      <span>Upload</span>
                      <input type="file" multiple>
                  </div><!-- btn -->
                  <div class="file-path-wrapper">
                      <input class="file-path validate" type="text" placeholder="Upload one or more photos">
                  </div><!-- file-path-wrapper -->
                </div><!-- file input-field -->
              </form>
            </div><!-- photos -->

            <div id="location">
              <div class="row">
                <h5 class="center">Location Title and Google Map</h5>
                  <form class="col s12">
                    <div class="row">
                      <div class="input-field col s12">
                        <input id="location-title" type="text">
                        <label for="location-title">Location Title</label>
                        <span class="helper-text">Location title will be displayed as a text.</span>
                      </div><!-- input-field -->
                    </div><!-- row -->
                    <br/>
                    <br/>
                    <div class="row">
                      <div class="input-field col s12">
                        <input id="location-map" type="text">
                        <label for="location-map">Location on Google Map</label>
                        <span class="helper-text">Type a location name in Google Map, will be displayed as a Google Map</span>
                      </div><!-- input-field -->
                    </div><!-- row -->
                  </form>
              </div><!-- row -->
          </div><!-- location -->

          <div id="price">
            <div class="row">
              <h5 class="center">Pricing</h5>
                <form class="col s12">
                    <div class="row">
                      <h6>Base Price</h6>
                      <div class="input-field col s12">
                        <input value="0" id="base-price" type="number">
                        <label for="base-price">Base Price</label>
                        <span class="helper-text">Base price will be charged if there are no addon prices eg: adult, child etc. Leave it as '0' if required to choose addon.</span>
                      </div><!-- input-field -->
                    </div><!-- row -->
                    <br/>
                    <br/>
                    <hr/>
                    <br/>
                    <br/>
                    <h5 class="center">For price that doesn't require IC/Passport, use this</h5>
                    <br/>
                    <div class="row">
                      <h6>Adult</h6>
                      <div class="input-field col s12">
                        <input id="adult" type="number">
                        <label for="my-adult">Adult</label>
                        <span class="helper-text">Addon price for adult</span>
                      </div><!-- input-field -->
                    </div><!-- row -->
                    <div class="row">
                      <h6>Child</h6>
                      <div class="input-field col s12">
                        <input id="child" type="number">
                        <label for="child">Child</label>
                        <span class="helper-text">Addon price for child</span>
                      </div><!-- input-field -->
                    </div><!-- row -->
                    <br/>
                    <br/>
                    <hr/>
                    <br/>
                    <br/>
                    <h5 class="center">For price that require IC/Passport, use this instead</h5>
                    <br/>
                    <div class="row">
                      <h6>Malaysian, adult</h6>
                      <div class="input-field col s12">
                        <input id="my-adult" type="number">
                        <label for="my-adult">Malaysian adult</label>
                        <span class="helper-text">Addon price for MY adult</span>
                      </div><!-- input-field -->
                    </div><!-- row -->
                    <div class="row">
                      <h6>Malaysian, child</h6>
                      <div class="input-field col s12">
                        <input id="my-child" type="number">
                        <label for="my-child">Malaysian child</label>
                        <span class="helper-text">Addon price for MY child</span>
                      </div><!-- input-field -->
                    </div><!-- row -->
                    <div class="row">
                      <h6>International, adult</h6>
                      <div class="input-field col s12">
                        <input id="int-adult" type="number">
                        <label for="int-adult">International adult</label>
                        <span class="helper-text">Addon price for international adult</span>
                      </div><!-- input-field -->
                    </div><!-- row -->
                    <div class="row">
                      <h6>International, child</h6>
                      <div class="input-field col s12">
                        <input id="int-child" type="number">
                        <label for="int-child">International child</label>
                        <span class="helper-text">Addon price for International child</span>
                      </div><!-- input-field -->
                    </div><!-- row -->
                </form>
            </div><!-- row -->
          </div><!-- price -->

          <div class="row">
            <div class="col s12">
                <button class="btn waves-effect waves-light" type="submit" name="action">Update
                    <i class="material-icons right">update</i>
                </button>
            </div><!-- col -->
          </div><!-- row -->

        </div><!-- card-content -->
      </div><!-- card-panel -->
    </div><!-- col -->
  </div><!-- row -->
</div><!-- container -->
