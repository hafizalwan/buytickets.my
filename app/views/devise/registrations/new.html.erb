<div class="row">
  <div class="col s10 offset-s1">
    <div class="card-panel">

      <h2 class="center">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="input-field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "email", type: "email", class: "validate" %>
        </div><!-- input-field -->

        <div class="input-field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", id: "password", type: "password", class: "validate" %>
        </div><!-- input-field -->

        <div class="input-field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", id: "password", type: "password", class: "validate" %>
        </div><!-- input-field -->

        <div class="actions">
          <%= button_tag type: "submit", class: "btn waves-effect waves-light", name: "action" do %>
            Submit<span><i class="material-icons right">send</i></span>
          <% end %>
        </div><!-- actions -->

        <div class="card-action">
          <br/>
          <%= link_to 'Log In', new_user_session_path %>
        </div><!-- card-action -->

    </div><!-- card-panel -->
    <% end %>

  </div><!-- col -->
</div><!-- row -->
